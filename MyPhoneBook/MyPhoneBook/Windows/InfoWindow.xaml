<Window x:Class="MyPhoneBook.Windows.InfoWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MyPhoneBook.Windows"
        mc:Ignorable="d"
        Title="InfoWindow" Height="150" Width="300" WindowStyle="None" ResizeMode="NoResize">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition Height="65"></RowDefinition>
        </Grid.RowDefinitions>
        <StackPanel Grid.ColumnSpan="2">

            <TextBlock Name ="Message"  TextWrapping="Wrap" FontSize="18" Margin="30 20 30 0 "></TextBlock>

        </StackPanel>

        <Button Click="OK" IsDefault="True" Margin="30 20 20 20" FontSize="16" Name ="Ok" Grid.Row="1" Grid.Column="1" >OK</Button>
        
    </Grid>
</Window>
